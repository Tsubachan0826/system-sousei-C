#include <stdio.h>
#include <string.h>

int main()
{
	char a[100];

	printf("Please Enter a Password : ");
	scanf("%99s", a);

	int uppercasecount = 0;
	int length = strlen(a);

		for (int i = 0; i < length; i++) {
			if (a[i] >= 'A' && a[i] <= 'Z') {
				uppercasecount++
			}
	}

	if (uppercasecount > 0) {
		printf("大文字が'%d'含まれています", uppercasecount)
	}

	else
	{
		printf("大文字が含まれていません")
	}

    return 0;
}
